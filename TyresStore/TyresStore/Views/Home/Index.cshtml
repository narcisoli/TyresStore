<table class="table">
    <thead>
        <tr>
            <td>Manufacturer</td>
            <td>Model</td>
            <td>Year</td>
            <td>Color</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Manufacturer</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.Color</td>
                <td class="button-select">
               
                    <button type="button" class="btn btn-mdb-color default-color"  onclick="mainModel.loadTyres(@vehicle.ID)"> Select <span class="glyphicon glyphicon-chevron-down"></span></button>

                </td>

            </tr>
        }
    </tbody>
</table>

